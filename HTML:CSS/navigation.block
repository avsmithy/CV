                    </li>
                  {.end}
                {.end}
  
          {.or}

            <!--COLLECTION-->

              <li class="{.section active} active-link{.end}{.if folderActive} folder-li{.end}">

                {.section collection}
                  <a href="{fullUrl}">{navigationTitle}</a>
                {.end}

                <!--EXTERNAL LINK-->

                {.section externalLink}
                  <a href="{url}"{.section newWindow} target="_blank"{.end}>
                    {title}
                  </a>
                {.end}

              </li>

          {.end}
        
    {.end}
  </ul>
</nav>